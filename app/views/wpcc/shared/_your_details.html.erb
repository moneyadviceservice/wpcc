<section class="section section--details details">
  <h2 class="section__heading details__heading">1. <%= t('wpcc.details.title') %>
    <span class="section__heading-summary"><%= t('wpcc.details.section__heading.age', age: session[:age]) %>,
      <%= t('wpcc.details.section__heading.gender_' + session[:gender]) %>,
      <%= t('wpcc.details.section__heading.salary_' + session[:salary_frequency], salary: session[:salary]) %>,
      <%= t('wpcc.details.section__heading.contribution_' + session[:contribution_preference]) %></span>
    <span>
      <%= link_to(t('wpcc.edit'), new_your_detail_path, class: 'section__heading-edit') %>
    </span>
  </h2>

  <% if message_presenter.manually_opt_in_message? %>
    <div class="contributions__row">
      <div class="callout">
        <p><%= message_presenter.manually_opt_in_message %></p>
      </div>
    </div>
  <% end %>
</section>
