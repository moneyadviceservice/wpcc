<%= form_for(@your_contributions_form, url: your_contributions_path ) do |f| %>
  <section class="details">
    <h2 class="details__heading">Your contributions</h2>
    <div class="form__row">
       <div class="details__field">
         <%= f.label :employee_contribution, t('wpcc.contributions.employee.label'), class: 'form__label-heading' %>
         <%= f.text_field :employee_contribution %>
       </div>

       <div class="details__field">
         <%= f.label :employer_contribution, t('wpcc.contributions.employer.label'), class: 'form__label-heading' %>
         <%= f.text_field :employer_contribution %>
       </div>
    </div>

    <div class="details__row">
      <div class="details__field">
        <div class="form__row">
          <%= f.submit(t('wpcc.details.next'), class: 'button button--primary') %>
        </div>
      </div>
    </div>
  </section>
<% end %>
